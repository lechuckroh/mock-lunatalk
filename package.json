{
  "name": "mock-lunatalk",
  "version": "1.0.0",
  "description": "루나소프트 카카오 알림톡 REST API Mocking 서버",
  "repository": {
    "type": "git",
    "url": "https://github.com/lechuckroh/mock-lunatalk"
  },
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test mocha --harmony -R spec --require should --recursive --exit test/",
    "coverage": "NODE_ENV=test nyc mocha --harmony -R spec --require should --recursive --exit --report lcovonly test/",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "app": "node src/app.js",
    "dockerimage": "docker build -t mock-lunatalk .",
    "docker": "docker run -d -p 8000:8000 -v `pwd`/config/:/app/config/ mock-lunatalk",
    "lint": "eslint --ext .js src"
  },
  "keywords": [
    "kakaotalk"
  ],
  "author": "Lechuck Roh",
  "license": "MIT",
  "dependencies": {
    "config": "^1.30.0",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-route": "^3.2.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.8.0",
    "should": "^13.2.1",
    "supertest": "^3.1.0"
  }
}
